
@model List<AgropuliApp.Models.Log>

@{
    ViewBag.Title = "Logs";
    Layout = "~/Views/_Shared/_AdminLayout.cshtml";
}

<h4 class="title text-white text-center d-block box-shadow">Logs</h4>

<div class="container">
    <a class="btn btn-secondary btn-block box-shadow" href="/Admin/App/Menu">Volver al menu</a>

    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header">
                @item.LogDateTime.ToShortDateString() @item.LogDateTime.ToShortTimeString()
            </div>
            <div class="card-body">
                @item.Message
            </div>
        </div>
    }
</div>