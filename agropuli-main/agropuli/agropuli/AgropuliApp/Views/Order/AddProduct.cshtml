@using AgropuliApp.Models;

@{
    ViewBag.Title = "Agregar Producto al Pedido";
    Layout = "~/Views/_Shared/_AppLayout.cshtml";
}

<h4 class="title text-white text-center d-block box-shadow">Agregar Producto al Pedido</h4>

<div class="container-fluid">
    <br />
    <div class="px-lg-12">
        @foreach (var item in (List<CategoriaAllST>)ViewBag.Categories)
        {
            <a href="/Order/ProductCatList/@item.Id">
                <!-- Gallery item -->
                <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                    <div class="bg-white rounded shadow-sm">
                        @if (item.Imagen != "")
                        {
                            <img src="data: @item.ImageMimeType ;base64, @item.Imagen " alt="" class="img-fluid card-img-top">
                        }
                        else
                        {
                            <img src="../../img/product/sinfoto.jpeg" alt="" class="img-fluid card-img-top">
                        }
                        <div class="p-4">
                            <h5> <a href="#" class="text-dark">@item.Name</a></h5>
                            <div class="d-flex align-items-center justify-content-between rounded-pill bg-light px-3 py-2 mt-4">
                                <p class="small mb-0"><i class="fa fa-picture-o mr-2"></i><span class="font-weight-bold">Categoria</span></p>
                                <div class="badge badge-danger px-3 rounded-pill font-weight-normal">Nueva</div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }

        <a href="/Order/ListProducts" class="btn btn-success btn-block box-shadow"><i class="fas fa-list"></i> Listado de pedidos</a>
        <a href="/App/Menu" class="btn btn-secondary btn-block box-shadow">Volver al menu</a>
        <br />
    </div>
    
</div>
